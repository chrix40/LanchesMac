@model Lanche;
<style>
    .img-itens {
        max-height: 250px !important;
        min-height: 250px !important;
        object-fit: contain !important;
    }
</style>
<div class="col-sm-4 col-md-4 col-lg-4">
    <p><img src="@Model.ImagemUrl" class="img-fluid img-itens" /></p>
    <p>Preço: @Model.Preco.ToString("c")</p>
    <h4>Lanche: @Model.Nome</h4>
    <a asp-controller="Lanche" asp-action="Details" asp-route-id="@Model.Id">@Model.Nome</a>
    <p>Lanche: @Model.DescricaoCurta</p>
    <div>
        <p class="button">
            <a class="btn btn-danger" id="cartButton" asp-controller="CarrinhoCompra" asp-action="AdicionarItemNoCarrinhoCompra" asp-route-lancheid="@Model.Id">
                Adicionar
            </a>
        </p>
    </div>

</div>